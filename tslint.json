{
  "extends": "tslint-microsoft-contrib",
  "linterOptions": {
    "exclude": ["node_modules/**"]
  },
  "rules": {
    // https://github.com/Microsoft/tslint-microsoft-contrib/issues/123
    "no-backbone-get-set-outside-model": false,
    "no-http-string": false,
    // import 'moment/locale/ko'
    "no-import-side-effect": false,
    // https://github.com/palantir/tslint/issues/1544
    "no-invalid-this": false,
    // template strings
    "no-multiline-string": false,
    // Request: if you expect binary data, you should set encoding: null
    "no-null-keyword": false,
    // constructor(private client: Client) {}
    "no-parameter-properties": false,
    // https://github.com/Microsoft/tslint-microsoft-contrib/issues/168
    "no-relative-imports": false,
    // import { Value } from 'google-protobuf/google/protobuf/struct_pb'
    "no-submodule-imports": [true, "google-protobuf"],
    // node_modules .d.ts any return
    "no-unsafe-any": false,
    // return logger.info()
    "no-void-expression": false,

    // node_modules .then() return
    "await-promise": false,
    // text().trim().replace() ...
    "newline-per-chained-call": false,
    // Array(10)
    "prefer-array-literal": [true, { "allow-size-argument": true }],
    // !, &&, || Operator Only boolean
    "strict-boolean-expressions": false
  }
}
